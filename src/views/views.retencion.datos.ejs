<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apex</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/permisos.css">
    <link rel="stylesheet" href="/css/panel.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('./components/menu'); %>
                <div class="content col-md-10">
                    <div class="row mb-4 header-row">
                        <div class="col-12 d-flex">
                            <div class="row w-100">
                                <div class="col-8">
                                    <h1>Retención de datos de usuarios inactivos</h1>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <form id="retentionForm" class="mb-4">
                                <div class="form-group">
                                    <label for="dias">Días de inactividad:</label>
                                    <input type="number" class="form-control" id="dias" name="dias" required
                                        placeholder="Introduce los días de inactividad">
                                </div>
                                <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal"
                                    data-bs-target="#confirmationModal">Guardar</button>
                            </form>
                        </div>
                    </div>

                </div>
        </div>
    </div>

    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">¿Desea guardar los cambios?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="fas fa-unlock fa-3x mb-3"></i>
                    <p>La nueva política de retención será guardada</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="confirmSave">Continuar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="/js/dropdown-panel.js"></script>
    <script src="/js/panel.js"></script>

    <script>
        document.getElementById('confirmSave').addEventListener('click', function () {
            const dias = document.getElementById('dias').value;
            fetch('/politicas/retencion', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ dias_inactividad: dias })
            }).then(response => response.text()).then(data => {
                alert(data);

                var modal = bootstrap.Modal.getInstance(document.getElementById('confirmationModal'));
                modal.hide();
            });
        });
    </script>
</body>

</html>