<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/panel.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Apex</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../components/menu'); %>
            <div class="content col-md-10">
                <div class="row mb-4 header-row">
                    <div class="col-12 d-flex">
                        <div class="row w-100">
                            <div class="col-8">
                                <h1>Grupos</h1>
                            </div>
                            <div class="col-4 d-flex">
                                <button class="btn btn-primary btn-custom agregar" data-bs-toggle="modal" data-bs-target="#permissionsModal">Crear grupo</button>
                            </div>
                        </div>
                    </div>
                </div>
                <% if (grupos.body && grupos.body.length > 0) { %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">ID</th>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">Nombre</th>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">Descripción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% grupos.body.forEach(grupo => { %>
                                <tr>
                                    <td><%= grupo.id %></td>
                                    <td><%= grupo.nombre %></td>
                                    <td><%= grupo.descripcion %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="alert alert-warning">
                        No hay grupos disponibles.
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="permissionsModal" tabindex="-1" aria-labelledby="permissionsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content" style="background-color: #2D2D3B; border-radius: 10px;">
            <div class="modal-header" style="border-bottom: none;">
                <h5 class="modal-title text-white" id="permissionsModalLabel">Nuevo Grupo</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <input type="text" class="form-control nombre" placeholder="Ingrese el nombre del grupo" style="border-radius: 5px;">
                </div>  
                <h5 class="text-white">Descripción</h5>
                <div class="mb-3">
                    <input type="text" class="form-control descripcion" placeholder="Ingrese la Descripción" style="border-radius: 5px;">
                </div>
                <h5 class="text-white">Añadir participantes</h5>
                <div class="mb-3">
                    <input type="email" class="form-control participante" placeholder="Ingrese el correo de los participantes" style="border-radius: 5px;">
                    <button class="btn btn-primary mt-2" id="add-participant">Añadir</button>
                </div>
                
                <h5 class="text-white">Participantes</h5>
                <div class="mb-3">
                    <textarea class="form-control participantes" rows="5" readonly style="border-radius: 5px;"></textarea>
                </div>
            </div>
            <div class="modal-footer" style="border-top: none; justify-content: center;">
                <button type="button" class="btn btn-primary crear" style="border-radius: 20px; width: 100px;">Crear</button>
            </div>
        </div>
    </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/services/grupos.js"></script>    
</body>
</html>
