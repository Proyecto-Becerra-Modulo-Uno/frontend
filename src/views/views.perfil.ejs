<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accesos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/perfil.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        .accesos {
            display: none; /* Ocultamos por defecto */
            max-height: 300px; /* Ajusta el tamaño según sea necesario */
            overflow-y: auto; /* Permitir scroll */
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="nav__item">
                <i class='bx bxs-bell' id="abrir"></i>
                <i class='bx bxs-user-circle' id="config"></i>
             </div>
        </nav>
    </header>
    
    <div class="caja__notifica" id="notificaciones">
        <div class="noti__main">
            <div class="noti__head">
                <p>Notificaciones</p>
            </div>
            <div class="noti__body">
                <p>Borrar Notificaciones</p>
            </div>
            <div class="noti__footer">
                <div class="toggle-container">
                    <label for="toggle-switch" class="toggle-label">Deshabilitar notificaciones</label>
                    <input type="checkbox" id="toggle-switch" class="toggle-switch">
                    <label for="toggle-switch" class="switch"></label>
                </div>
            </div>
        </div>
    </div>

    <div class="config" id="configuracion">
        <div class="noti__head">
            <p>Configuración</p>
        </div>
        <div class="config__body">
            <a href="">Autenticación de Dos Factores</a>
            <a href="">Pongan las opciones acá cansones</a>
            <a href="" class="cerrarSesion">Cerrar Sesión</a>
        </div>
    </div>

    <main>
        <div class="main__perfil">
            <div class="main__img">
                <div class="img__foto">
                    <img src="../img/apple.png" alt="" class="circulo">
                    <div class="circulo__usuario">
                        <div class="nom">
                            <p>{Usuario}</p>
                        </div>
                        <div class="nom">
                            <p>{Rol}</p>
                        </div>
                    </div>
                </div>
                    
                <div class="perfil__btn">
                    <div class="arriba">
                        <button class="btna btn--azul" data-bs-toggle="modal" data-bs-target="#cambiarContrasenaModal">Cambiar Contraseña</button>
                        <button class="btna btn--rojo" data-bs-toggle="modal" data-bs-target="#eliminarCuentaModal">Eliminar Cuenta</button>
                    </div>
                    <div class="abajo">
                        <button class="btna btn--gris" id="btna" onclick="toggleAccesos()">
                            Accesos
                            <i class='bx bxs-down-arrow' id="rotar"></i>
                        </button>
                        <button class="btna btn--azul" data-bs-toggle="modal" data-bs-target="#exampleModal">Editar Cuentas Bloqueadas</button>
                    </div>
                    <div class="accesos" id="acceso">
                        <table class="table table-bordered border-dark">
                            <thead class="head__acce">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{1/09/2024}</td>
                                    <td>
                                        <button class="bta btn--azul">Detalles</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>{1/09/2024}</td>
                                    <td>
                                        <button class="bta btn--azul">Detalles</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- INICIO MODAL Cambiar Contraseña -->
    <div class="modal fade" id="cambiarContrasenaModal" tabindex="-1" aria-labelledby="cambiarContrasenaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cambiarContrasenaModalLabel">Cambiar Contraseña</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="cambiarContrasenaForm">
                        <div class="mb-3">
                            <label for="contraseñaActual" class="form-label">Contraseña Actual</label>
                            <input type="password" class="form-control" id="contraseñaActual" required>
                        </div>
                        <div class="mb-3">
                            <label for="nuevaContraseña" class="form-label">Nueva Contraseña</label>
                            <input type="password" class="form-control" id="nuevaContraseña" required>
                        </div>
                        <div class="mb-3">
                            <label for="repetirNuevaContraseña" class="form-label">Repetir Nueva Contraseña</label>
                            <input type="password" class="form-control" id="repetirNuevaContraseña" required>
                        </div>
                        <div id="mensajeCambio"></div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="confirmarCambioContraseña">Cambiar Contraseña</button>
                </div>
            </div>
        </div>
    </div>
    <!-- FIN MODAL Cambiar Contraseña -->

    <!-- INICIO MODAL Eliminar Cuenta -->
    <div class="modal fade" id="eliminarCuentaModal" tabindex="-1" aria-labelledby="eliminarCuentaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eliminarCuentaModalLabel">Eliminar Cuenta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Está seguro de que desea eliminar su cuenta?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger" id="confirmarEliminarCuenta">Sí, Eliminar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- FIN MODAL Eliminar Cuenta -->

    <!-- INICIO MODAL -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Configuración</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text">
                        <p>Indica la cantidad de accesos incorrectos para bloquear la cuenta</p>
                    </div>
                    <div class="contador">
                        <i class='bx bx-minus-circle mas' id="min"></i>
                        <input type="text" class="resul" readonly>
                        <i class='bx bx-plus mas' id="max"></i>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- FIN MODAL -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Función para alternar la visibilidad del scroll de accesos
        function toggleAccesos() {
            const accesos = document.getElementById('acceso');
            accesos.style.display = (accesos.style.display === 'none' || accesos.style.display === '') ? 'block' : 'none';
        }

        // Funcionalidad para abrir las notificaciones
        const abrirBtn = document.getElementById('abrir');
        const notificaciones = document.getElementById('notificaciones');

        abrirBtn.addEventListener('click', () => {
            notificaciones.classList.toggle('active');
        });

        document.addEventListener("click", (event) => {
            const isClickInside = notificaciones.contains(event.target) || abrirBtn.contains(event.target);
            if (!isClickInside) {
                notificaciones.classList.remove("active");
            }
        });

        // Funcionalidad para abrir la configuración
        const configBtn = document.getElementById('config');
        const configuracion = document.getElementById('configuracion');

        configBtn.addEventListener('click', () => {
            configuracion.classList.toggle('active');
        });

        document.addEventListener("click", (event) => {
            const isClickInside = configuracion.contains(event.target) || configBtn.contains(event.target);
            if (!isClickInside) {
                configuracion.classList.remove("active");
            }
        });
    </script>
</body>
</html>
