        </div>

        <form class="blue-box">
            <h3>¿Cuál fue tu primer proyecto o tarea en esta empresa?</h3>
            <div class="form-group">
                <label for="first-project">Respuesta</label>
                <input type="text" id="first-project" name="first-project">
            </div>

            <h3>¿Cuál fue el nombre de tu primera capacitación o curso en esta empresa?</h3>
            <div class="form-group">
                <label for="first-training">Respuesta</label>
                <input type="text" id="first-training" name="first-training">
            </div>
            <div class="buttons">
                <button type="" class="button1">Agregar otra pregunta</button>
                <button type="" class="button2">Guardar cambios</button>
            </div>
        </form>

    </header1>

    <!-- Modal Structure -->
    <div id="questionModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Agregar nueva pregunta</h2>
            <form id="modalForm">
                <div class="form-group">
                    <div class="inputGroup">
                        <input type="text" required="" autocomplete="off">
                        <label for="name">Escribe tu pregunta:</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="inputGroup">
                        <input type="text" required="" autocomplete="off">
                        <label for="name">Escribe tu respuesta:</label>
                    </div>
                </div>
                <button type="submit" class="button2">Guardar</button>
            </form>
        </div>
    </div>

    <script>
        const abrir = document.getElementById('abrir');
        const notificaciones = document.getElementById('notificaciones');
    
        abrir.addEventListener('click', () =>{
            notificaciones.classList.toggle('active')
    
        })
    
        document.addEventListener("click", (event) => {
          const isClickInside =
          notificaciones.contains(event.target) ||
          abrir.contains(event.target);
    
          if (!isClickInside) {
            notificaciones.classList.remove("active");
          }
        });
    
        const abrirConfig = document.getElementById('config');
        const configuracion = document.getElementById('configuracion');
    
        abrirConfig.addEventListener('click', () =>{
            configuracion.classList.toggle('activeC')
    
        })
    
        document.addEventListener("click", (event) => {
          const isClickInside =
          configuracion.contains(event.target) ||
          abrirConfig.contains(event.target);
    
          if (!isClickInside) {
            configuracion.classList.remove("activeC");
          }
        });
    
