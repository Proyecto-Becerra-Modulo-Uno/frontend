<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apex</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/permisos.css">
    <link rel="stylesheet" href="css/historialAcceso.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            
            <div class="content col-md-10">
                <div class="row mb-4 header-row">
                    <div class="col-12 d-flex">
                        <div class="row w-100">
                            <div class="col-12 eib">
                                <h1>Historial de Acceso</h1>
                                <!-- barra de busqueda -->
                                <div class="group">
                                    <svg class="icon" aria-hidden="true" viewBox="0 0 24 24">
                                        <g>
                                            <path
                                                d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z">
                                            </path>
                                        </g>
                                    </svg>
                                    <input placeholder="Buscar..." type="search" class="input" id="search_invenatry">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">N°</th>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">Fecha</th>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">Horario</th>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">Localización</th>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">Dispositivo</th>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">Navegador</th>
                                <th style="background-color: #1E3DEA; color: white;" scope="col">IP</th>
                            </tr>
                        </thead>
                        <tbody id="data">
                            <tr class="table-active table-buscar">
                                <td class="number">1</td>
                                <td class="fecha">15-08-2022</td>
                                <td class="horario">10:41:12</td>
                                <td class="localizacion">Indefinido</td>
                                <td scope="col"><img src="../img/smartphone.png" class="imgCel" alt="" srcset=""></td>
                                <td class="dispositivo">Safari</td>
                                <td class="ip">192.168.25.1</td>  
                            </tr>

                            <tr class="table-buscar">
                                <td class="number">2</td>
                                <td class="fecha">22-11-2005</td>
                                <td class="horario">09:22:04</td>
                                <td class="localizacion">Indefinido</td>
                                <td scope="col"><img src="../img/laptop.png" class="imgCel" alt="" srcset=""></td>
                                <td class="dispositivo">Chrome</td>
                                <td class="ip">203.0.113.42</td>
                            </tr>

                            <tr class="table-active table-buscar">
                                <td class="number">3</td>
                                <td class="fecha">17-07-2024</td>
                                <td class="horario">11:02:24</td>
                                <td class="localizacion">Indefinido</td>
                                <td scope="col"><img src="../img/smartphone.png" class="imgCel" alt="" srcset=""></td>
                                <td class="dispositivo">Chrome</td>
                                <td class="ip">182.5.573.34</td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                <div class="col-12">
                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true"
                                style="background-image: url('/img/arrow_right.png'); background-size: contain; background-repeat: no-repeat; background-position: center; width: 30px; height: 30px; transform: rotate(180deg);">
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link d-flex align-items-center justify-content-center" href="#"
                                style="background-color: #1E3DEA; color: white; border-radius: 5px; text-align: center; width: 30px; height: 30px; line-height: 30px; display: inline-block;">
                                1
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link d-flex align-items-center justify-content-center" href="#"
                                style="background-color: #1E3DEA; color: white; border-radius: 5px; text-align: center; width: 30px; height: 30px; line-height: 30px; display: inline-block;">
                                2
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link d-flex align-items-center justify-content-center" href="#"
                                style="background-color: #1E3DEA; color: white; border-radius: 5px; text-align: center; width: 30px; height: 30px; line-height: 30px; display: inline-block;">
                                3
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link d-flex align-items-center justify-content-center" href="#"
                                style="background-image: url('/img/arrow_right.png'); background-size: contain; background-repeat: no-repeat; background-position: center; width: 30px; height: 30px;">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <script>
            document.querySelectorAll('.btn-primary').forEach(button => {
                button.addEventListener('click', () => {
                    const dropdownId = button.id.replace('button', 'dropdown');
                    const dropdown = document.getElementById(dropdownId);
                    dropdown.style.display = dropdown.style.display === 'none' ? 'flex' : 'none';
                });
            });

        </script>
    <script src="/js/botones.js"></script>
    <script src="/js/historialAcceso.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
