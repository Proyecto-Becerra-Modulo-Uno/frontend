    <!-- Modal -->
    <div class="modal fade" id="permissionsModal" tabindex="-1" aria-labelledby="permissionsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-header-custom">
            <h5 class="modal-title" id="permissionsModalLabel">Permisos para los Usuarios</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            <p>Selecciona las opciones que deseas activar o desactivar para los usuarios:</p>
            <div class="permissions-list">
                <div class="permission-item">
                <label for="option1">Editar</label>
                <div class="switch-container">
                    <div class="switch">
                    <button class="actualizar_permiso btn btn-success" data-modulo="1" data-permiso="5" data-estado="1">
                        Activado
                    </button>
                    </div>
                </div>
                </div>
                <div class="permission-item">
                <label for="option2">Visualizar</label>
                <div class="switch-container">
                    <div class="switch">
                    <button class="actualizar_permiso btn btn-success" data-modulo="1" data-permiso="5" data-estado="1">
