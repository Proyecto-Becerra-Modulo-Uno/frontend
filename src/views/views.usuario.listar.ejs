<!-- views/usuario/listar.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Control de usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/panel.css">
    <style>
        .pagination .page-item .page-link {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            margin: 0 5px;
            border-radius: 5px;
        }
        
        .pagination .page-item.active .page-link {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        
        .pagination .page-item .page-link:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        
        .pagination .page-item:first-child .page-link,
        .pagination .page-item:last-child .page-link {
            background-color: transparent;
            border: none;
            color: #007bff;
        }
        
        .pagination .page-item:first-child .page-link:hover,
        .pagination .page-item:last-child .page-link:hover {
            color: #0056b3;
        }
        </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="aside col-2 col-md-2 d-flex flex-column justify-content-between">
                <div>
                    <div class="header d-flex align-items-center justify-content-center mt-5">
                        <img class="title" src="/img/estrella-afilada-medio-trazo 1.png" alt="Apex-Logo" style="height: 50px; margin-right: 10px;">
                        <h1 style="color: white; font-size: 30px; font-weight:700">Apex</h1>
                    </div>
                    <div class="d-flex flex-column align-items-center justify-content-center mt-5">
                        <button class="btn btn-primary">Lista de usuarios</button>
                        <button class="btn btn-primary mt-2">Lista de bloqueados</button>
                        <button class="btn btn-primary mt-2">Logs</button>
                        <button class="btn btn-primary mt-2">Intentos de acceso</button>
                        <button class="btn btn-primary mt-2">Configuración de acceso</button>
                        <button class="btn btn-primary mt-2">Autenticación de dos factores</button>
                    </div>
                </div>
                <div class="admin-section d-flex align-items-center justify-content-center mt-5">
                    <div class="flex-column mt-5 me-5">
                        <h1 style="color: white; font-size: 20px; margin-bottom: 0;">Administrador</h1>
                        <p style="color: gainsboro;">admin@gmail.com</p> 
                    </div>
                    <div class="mt-4" style="color: white;">
                        <img src="/img/menu-puntos-vertical 1.png" alt="">
                    </div>
                </div>
            </div>
            <div class="content col-md-10">
                <h1>Panel de Control de usuarios</h1>
                <% if (usuarios && usuarios.length > 0) { %>
                    <table class="table table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Contraseña</th>
                                <th>Rol</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% usuarios.forEach(function(usuario) { %>
                                <tr>
                                    <td><%= usuario.ID %></td>
                                    <td><%= usuario.Nombre %></td>
                                    <td><%= usuario.Correo %></td>
                                    <td><%= usuario.Contrasena %></td>
                                    <td>
                                        <select class="form-select" onchange="cambiarRol(<%= usuario.ID %>, this.value)">
                                            <option value="1" <%= usuario.Rol === 'Usuario' ? 'selected' : '' %>>Usuario</option>
                                            <option value="2" <%= usuario.Rol === 'Invitado' ? 'selected' : '' %>>Invitado</option>
                                            <option value="3" <%= usuario.Rol === 'Moderador' ? 'selected' : '' %>>Moderador</option>
                                            <option value="4" <%= usuario.Rol === 'Administrador' ? 'selected' : '' %>>Administrador</option>
                                        </select>
                                    </td>
                                    <td><%= usuario.Estado %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <!-- Paginación -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo;</a>
                                </li>
                            <% } %>
                            
                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            
                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">&raquo;</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } else { %>
                    <p>No hay usuarios para mostrar.</p>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function cambiarRol(usuarioId, nuevoRol) {
            try {
                const response = await fetch('/cambiar-rol', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ 
                        usuarioId: parseInt(usuarioId, 10), 
                        rolId: parseInt(nuevoRol, 10)
                    }),
                });
                if (!response.ok) throw new Error('Error al cambiar el rol');
        
                const data = await response.json();
                if (!data.error) {
                    alert('Rol actualizado correctamente');
                    // Aquí podrías actualizar la UI sin recargar la página
                    // Ejemplo: document.querySelector(`#usuario-${usuarioId} .rol`).textContent = nuevoRol;
                } else {
                    alert('Error al actualizar el rol: ' + data.message);
                }
            } catch (error) {
                console.error('Error al cambiar rol:', error);
                alert('Error al cambiar el rol');
            }
        }
    </script>
</body>
</html>