<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Configuración de Políticas de Seguridad para Accesos Móviles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/panel.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('./components/menu'); %>
            <!-- Contenido principal -->
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Configuración de Políticas de Seguridad para Accesos Móviles</h1>
                </div>

                <form id="securityForm">
                    <div class="mb-3">
                        <label for="passwordComplexity" class="form-label">Complejidad de Contraseña:</label>
                        <select class="form-select" id="passwordComplexity" name="passwordComplexity">
                            <option value="low">Baja</option>
                            <option value="medium">Media</option>
                            <option value="high">Alta</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="passwordExpiration" class="form-label">Expiración de Contraseña (días):</label>
                        <input type="number" class="form-control" id="passwordExpiration" name="passwordExpiration" min="0" max="365">
                    </div>
                    <div class="mb-3">
                        <label for="maxLoginAttempts" class="form-label">Máximo de Intentos de Inicio de Sesión:</label>
                        <input type="number" class="form-control" id="maxLoginAttempts" name="maxLoginAttempts" min="1" max="10">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="twoFactorAuth" name="twoFactorAuth">
                        <label class="form-check-label" for="twoFactorAuth">Habilitar Autenticación de Dos Factores</label>
                    </div>
                    <div class="mb-3">
                        <label for="sessionTimeout" class="form-label">Tiempo de Expiración de Sesión (minutos):</label>
                        <input type="number" class="form-control" id="sessionTimeout" name="sessionTimeout" min="1" max="120">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="vpnRequired" name="vpnRequired">
                        <label class="form-check-label" for="vpnRequired">Requerir Conexión VPN</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Configuración</button>
                </form>

                <div class="alert alert-success mt-3" id="successMessage" style="display: none;">
                    Configuración guardada exitosamente.
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('securityForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Recopilar datos del formulario
            const formData = {
                passwordComplexity: document.getElementById('passwordComplexity').value,
                passwordExpiration: document.getElementById('passwordExpiration').value,
                maxLoginAttempts: document.getElementById('maxLoginAttempts').value,
                twoFactorAuth: document.getElementById('twoFactorAuth').checked,
                sessionTimeout: document.getElementById('sessionTimeout').value,
                vpnRequired: document.getElementById('vpnRequired').checked
            };

            // Aquí se enviarían los datos al servidor
            console.log('Configuración a guardar:', formData);

            // Mostrar mensaje de éxito
            document.getElementById('successMessage').style.display = 'block';

            // Ocultar el mensaje después de 3 segundos
            setTimeout(() => {
                document.getElementById('successMessage').style.display = 'none';
            }, 3000);
        });
    </script>
</body>
</html>