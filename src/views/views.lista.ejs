<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apex</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/permisos.css">
    <link rel="stylesheet" href="/css/panel.css">
</head>
<body>
    <body>
        <div class="container-fluid">
            <div class="row">
                <%- include('./components/menu'); %>
                <div class="content col-md-10">
                    <h2>Agregar IP a Lista</h2>
                    <form id="ipForm">
                        <div class="mb-3">
                            <label for="ipAddress" class="form-label">Direcci√≥n IP</label>
                            <input type="text" class="form-control" id="ipAddress" name="ipAddress" required>
                        </div>
                        <div class="mb-3">
                            <label for="listType" class="form-label">Tipo de Lista</label>
                            <select class="form-select" id="listType" name="listType" required>
                                <option value="">Seleccione una lista</option>
                                <option value="white">Lista Blanca</option>
                                <option value="black">Lista Negra</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Agregar IP</button>
                    </form>
                </div>
            
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
                <script>
                    document.getElementById('ipForm').addEventListener('submit', async (e) => {
                        e.preventDefault();
                        const ipAddress = document.getElementById('ipAddress').value;
                        const listType = document.getElementById('listType').value;
                        
                        try {
                            const response = await fetch('http://localhost:3000/users/addIpToList', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ ipAddress, listType }),
                            });
                            
                            if (response.ok) {
                                alert('IP agregada exitosamente');
                                document.getElementById('ipForm').reset();
                            } else {
                                alert('Error al agregar la IP');
                            }
                        } catch (error) {
                            console.error('Error:', error);
                            alert('Error al procesar la solicitud');
                        }
                    });
                </script>


  
                  
                    
              
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="/js/panel.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
