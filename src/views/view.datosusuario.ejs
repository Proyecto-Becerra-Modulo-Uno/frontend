<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apex</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/permisos.css">
    <link rel="stylesheet" href="/css/panel.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('./components/menu'); %>
            <div class="content col-md-10">
                <div class="card m-1 d-flex flex-">
                    <div class="card-header">
                        <h1>Gesti√≥n de Backups de Usuarios</h1>
                    </div>
                    <div class="card-body">
                        <!-- Listar backups -->
                        <h2>Backups Disponibles</h2>
                        <ul>
                            <% backups.forEach(function(backup) { %>
                                <li><%= backup.name %> - <%= backup.date %></li>
                            <% }); %>
                        </ul>

                        <!-- Crear Backup -->
                        <h2>Crear Backup</h2>
                        <form action="/create-backup" method="POST">
                            <button type="submit">Crear Backup</button>
                        </form>

                        <!-- Restaurar datos desde backup -->
                        <h2>Restaurar Datos</h2>
                        <form action="/restore-backup" method="POST">
                            <label for="backupFilePath">Ruta del archivo de respaldo:</label>
                            <input type="text" id="backupFilePath" name="backupFilePath" required>
                            <button type="submit">Restaurar Datos</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="/js/panel.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>