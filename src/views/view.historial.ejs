<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Datos Detallados</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-2">
        menu
      </div>
      <div class="col-10">
        <h1 class="mt-4 mb-4">Datos Detallados Historial</h1>

        <!-- Historia Sesión Usuario -->
        <h2>Historia Sesión Usuario</h2>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-primary border border-3 border-primary-subtle rounded-3">
              <tr>
                <th>ID</th>
                <th>Usuario ID</th>
                <th>Nombre Usuario</th>
                <th>Nombre</th>
                <th>Fecha Inicio Sesión</th>
                <th>Dirección IP</th>
                <th>Dispositivo</th>
                <th>Tipo Sistema Operativo</th>
              </tr>
            </thead>
            <tbody>
              <% if (datos && datos.length> 0 && datos[0].length > 0) { %>
                <% datos[0].forEach(function(item) { %>
                  <tr>
                    <td>
                      <%= item.id %>
                    </td>
                    <td>
                      <%= item.usuario_id %>
                    </td>
                    <td>
                      <%= item.nombre_usuario %>
                    </td>
                    <td>
                      <%= item.nombre %>
                    </td>
                    <td>
                      <%= new Date(item.fecha_inicio_sesion).toLocaleString() %>
                    </td>
                    <td>
                      <%= item.direccion_ip %>
                    </td>
                    <td>
                      <%= item.dispositivo %>
                    </td>
                    <td>
                      <%= item.tipo_sistema_operativo %>
                    </td>
                  </tr>
                  <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="8">No hay datos disponibles</td>
                      </tr>
                      <% } %>

            </tbody>
          </table>
        </div>

        <!-- Permisos y Módulos -->
        <h2 class="mt-5">Permisos y Módulos</h2>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-primary border border-3 border-primary-subtle rounded-3">
              <tr>
                <th>Permiso ID</th>
                <th>Nombre Permiso</th>
                <th>Permiso Módulo ID</th>
                <th>ID Módulo</th>
                <th>Nombre Módulo</th>
                <th>Estado Módulo</th>
                <th>Estado Módulo Legible</th>
              </tr>
            </thead>
            <tbody>
              <% if (datos && datos.length> 0 && datos[1].length > 0) { %>
                <% datos[1].forEach(function(item) { %>
                  <tr>
                    <td>
                      <%= item.permiso_id %>
                    </td>
                    <td>
                      <%= item.nombre_permiso %>
                    </td>
                    <td>
                      <%= item.permiso_modulo_id || 'N/A' %>
                    </td>
                    <td>
                      <%= item.id_modulo || 'N/A' %>
                    </td>
                    <td>
                      <%= item.nombre_modulo || 'N/A' %>
                    </td>
                    <td>
                      <%= item.estado_modulo || 'N/A' %>
                    </td>
                    <td>
                      <%= item.estado_modulo_legible %>
                    </td>
                  </tr>
                  <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="8">No hay datos disponibles</td>
                      </tr>
                      <% } %>

            </tbody>
          </table>
        </div>

        <!-- Estadísticas de Dispositivos por Usuario -->
        <h2 class="mt-5">Estadísticas de Dispositivos por Usuario</h2>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-primary border border-3 border-primary-subtle rounded-3">
              <tr>
                <th>Nombre Usuario</th>
                <th>Nombre</th>
                <th>Dispositivo</th>
                <th>Total Sesiones</th>
                <th>Primera Sesión</th>
                <th>Última Sesión</th>
              </tr>
            </thead>
            <tbody>
              <% if (datos && datos.length> 0 && datos[2].length > 0) { %>
                <% datos[2].forEach(function(item) { %>
                  <tr>
                    <td>
                      <%= item.nombre_usuario %>
                    </td>
                    <td>
                      <%= item.nombre %>
                    </td>
                    <td>
                      <%= item.dispositivo %>
                    </td>
                    <td>
                      <%= item.total_sesiones %>
                    </td>
                    <td>
                      <%= new Date(item.primera_sesion).toLocaleString() %>
                    </td>
                    <td>
                      <%= new Date(item.ultima_sesion).toLocaleString() %>
                    </td>
                  </tr>
                  <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="8">No hay datos disponibles</td>
                      </tr>
                      <% } %>

            </tbody>
          </table>
        </div>

        <!-- Lista de Módulos -->
        <h2 class="mt-5">Lista de Módulos</h2>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-primary border border-3 border-primary-subtle rounded-3">
              <tr>
                <th>ID Módulo</th>
                <th>Nombre Módulo</th>
                <th>Total Permisos Asignados</th>
              </tr>
            </thead>
            <tbody>
              <% if (datos && datos.length> 0 && datos[3].length > 0) { %>
                <% datos[3].forEach(function(item) { %>
                  <tr>
                    <td>
                      <%= item.id_modulo %>
                    </td>
                    <td>
                      <%= item.nombre_modulo %>
                    </td>
                    <td>
                      <%= item.total_permisos_asignados %>
                    </td>
                  </tr>
                  <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="8">No hay datos disponibles</td>
                      </tr>
                      <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
